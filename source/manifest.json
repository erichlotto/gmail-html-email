{
  "name": "Gmail HTML Paste",
  "description": "Allows the usage of html content on Gmail",
  "version": "0.0.1",
  "permissions": ["contextMenus", "clipboardRead"],
  "manifest_version": 2,
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [
      {
        "matches": ["http://mail.google.com/*", "https://mail.google.com/*"],
        "js": ["content_script.js"]
      }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
